{
  "rvo": {
    "radio-button": {
      "label": {
        "disabled": {
          "color": { "value": "{rvo.color.grijs-300}" }
        }
      },
      "hover": {
        "border-color": {
          "value": "{rvo.color.hemelblauw}"
        }
      },
      "checked": {
