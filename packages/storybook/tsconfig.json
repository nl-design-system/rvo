{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["node", "react", "react-dom"],
    "paths": {
      "@nl-rvo/design-tokens/*": ["../../proprietary/design-tokens/*"],
      "@nl-rvo/assets/*": ["node_modules/@nl-rvo/assets/*"],
      "@nl-rvo/components/*": ["../../components/*"],
      "@docusaurus/components/*": ["../docusaurus/src/components/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.d.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "coverage",
    ".changeset",
    "packages/storybook/storybook-static",
    "packages/storybook/dist"
  ],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "paths": {
    "@bootstrap-icons/*": ["node_modules/bootstrap-icons/*"]
  },
  "ts-node": {
    "esm": true
  }
}
